/* components/col-list/col-list.wxss */
.book-recommendation{
	margin-top: 52rpx;
	padding: 0 30rpx;
}
.book-recommendation .title{
	display: flex;
	justify-content: space-between;
	align-items: center;
	/* flex-wrap: nowrap; */
}
/* .book-recommendation .title text{} */
.title-one{
  display: inline-block;
  margin-left: 0;
  font-size: 32rpx
}
.title-two{
  display: inline-block;
  margin-left: 0;
  color: #919191;
}

.title-two image{
  width: 14rpx;
  height: 24rpx;
}
.book-content{
	display: flex;
	flex-wrap: wrap;
	justify-content: space-between;
}
.book-list{
	margin-top: 60rpx;
	/* margin-left: 20rpx; */
	display: flex;
	flex-direction: column;
	width: 48%;
	flex-shrink: 0;
}

.book-image{
	position: relative;
	/* width: 140rpx; */
	height: 180rpx;
	width: 100%;
	border-radius: 10rpx;
	overflow: hidden;
}
.book-image .album{
	position: absolute;
	top:0;
	left: 0;
	/* background: #ff623f; */
	width: 30rpx;
	height: 30rpx;

	color: #fff;
	font-size: 10px;
	border-radius: 5rpx;
	text-align: center;
	line-height: 25rpx;
}
/* .book-image .album */
.book-image .audio{
	position: absolute;
	bottom: 0;
	right: 0;
	width:40rpx;
	height: 40rpx;
	margin-bottom: 10rpx;
	margin-right:10rpx;
}
.book-image .video{
	position: absolute;
	bottom: 0;
	right: 0;
	width:40rpx;
	height: 40rpx;
	margin-bottom: 10rpx;
	margin-right:10rpx;
}

.book-information{
	margin-left: 10rpx;
	/* background-color: turquoise; */
	/* border-bottom: 4rpx solid #F6F6F6; */
	width: 100%;
}

.book-image image{
	/* width: 140rpx; */
	width:100%;
	height: 100%;
}

.book-one{
	display: flex;
	flex-direction: column
}

.book-title{
	font-family: 'Himalaya-G';
	font-size: 30rpx;
	color: #313131;
	margin-top: 5rpx;
}

.book-introduction{
	font-family: 'Jomolhari';
	font-size: 26rpx;
	color: #616161;
	margin-top: 20rpx;
}

.book-two{
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.book-two image{
	width: 20rpx;
	height: 20rpx
}

.book-two text{
	font-size: 24rpx;
	margin-left: 10rpx;
	color: #616161
}

.replace{
	width: 100%;
	display: flex;
	justify-content: center;
	margin-top: 38rpx;
	margin-bottom: 38rpx
}

.replace-button{
	display: flex;
	vertical-align: middle;
	width: 190rpx;
	height: 60rpx;
	background-color: rgb(255,239,235);
	justify-content: center;
	align-items: center;
	border-radius: 50rpx
}

.replace-button image{
	width: 28rpx;
	height: 28rpx;
}

.replace-button text{
	font-size: 26rpx;
	color: #FF623F;
	margin-left: 18rpx
}