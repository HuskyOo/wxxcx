.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

/* 滚动条 */
/* ::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
} */

.navigation {
  width: 680rpx;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 70rpx;
  font-size: 30rpx;
  white-space: nowrap;
  background-color: rgb(250, 250, 250);
  color: #757575;
}

.nav-options {
  margin: 0 28rpx;
  display: inline-block;
}

.nav-options.active {
  color: #FE533C;
  border-bottom: 1rpx solid #FE533C;
  /* position: relative; */
}

.nav-options.active:after {
  content: "";
  display: block;
  height: 4rpx;
  width: 60rpx;
  background: #FE533C;
  position: absolute;
  bottom: 0;
  border-radius: 4rpx;
}

/* 轮播图 */
.carousel{
  margin:0rpx 20rpx;
  margin-top: 16rpx;
  height: 264rpx
}

/* 分界线 */
.boundary-line{
  width: 100%;
  height: 18rpx;
  background-color: #F6F6F6
}
/* 分界线2 */
.boundary-line-to{
  width: 100%;
  height: 2rpx;
  background-color: rgb(238,238,238)
}
/* 细分割 */
.segmentation-file{
  width: 570rpx;
  height: 4rpx;
  background-color: #F6F6F6
}

.carousel image{
  width: 710rpx;
  height: 264rpx
}

