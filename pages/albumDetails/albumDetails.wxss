    border-bottom: 4rpx solid #10c2b8;
    color:#10c2b8;
}
.choise{
    /* position: fixed; */
    top:520rpx;
    left:0;
    width: 100%;
    height:80rpx;
    display: flex;
    justify-content: space-between;
    border-bottom: 1rpx solid #f5f5f5;
    align-items: center;
}
.album-content{
    /* position: fixed; */
    top:600rpx;
    left:0;
    height:480rpx;
    
}
.book-number{
    height:100rpx;
    width: 50rpx;
    text-align: center;
    line-height: 100rpx;
    /* margin-right: 40rpx; */
}
.LastBtns{
    font-size: 30rpx;
    position:fixed;
    bottom: 0;
    left:0;
    width:100%;
    display: flex;
    justify-content: space-between;
    border-top: 1rpx solid rgb(246,246,246)
}
.book-list{
    margin-top:20rpx;
    display: flex;
    align-items: center;
}
.book-two.interview-two{
    position: relative;
    overflow: hidden;
}
.book-information{
    border-bottom:1rpx solid #f5f5f5;
    padding-bottom: 10rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between
}
.book-information view{
    overflow: hidden;
}
.suo_icon{
    position: absolute;
    right: 60rpx;
    height: 100%;
}
.book-two .suo{
    height: 100%;
    width:30rpx;
}
.introduce{
    box-sizing: border-box;
    /* position: fixed; */
    top:520rpx;
    left:0;
    height:579rpx;
    width: 100%;
    display: flex;
    flex-direction: column;
    /* padding: 0 20rpx; */
}
.introduce .title{
    display: block;
    height: 100rpx;
    line-height: 100rpx;
}
.share{
    display: flex;
    justify-content: space-between;
}
.share>view{
    width: 100%;
    background: #fff;
}
.share button{
    background: #fff;
    border-radius: 0;
    border-right: 1rpx solid #f5f5f5;
    margin: 0;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0;
    font-size: 30rpx;
}
.share button image{
    flex-shrink: 0;
}
.share button text{
    white-space: nowrap;
}
button::after{
    border: none
}



.introduce .relate, .introduce .content{
    box-sizing: border-box;
    padding: 20rpx 30rpx;
}

.play-num{
    display: flex;
    font-size: 28rpx;
}
.play-num>view{
    display: flex;
    align-items: center;
    margin-right: 50rpx;
}
.play-num image{
    width: 30rpx;
    height: 30rpx;
    margin-right: 15rpx;
}

