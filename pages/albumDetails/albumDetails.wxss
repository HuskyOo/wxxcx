    justify-content: space-around;
}
.album-detail-btn{
    font-family: 'Himalaya-G';
    width:30%;
    height:106rpx;
    text-align: center;
    /* font-size: 30rpx; */
    background: #fff;
    line-height: 106rpx;
    /* border-bottom: 1rpx solid rgb(246,246,246); */
}
.LastBtns .album-class-btn text{
    display: block;
    width: 100%;
    height: 100%;
}
.album-class-btn{
    /* border-left: 1rpx solid rgb(246,246,246); */
