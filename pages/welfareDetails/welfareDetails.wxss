.restrict{
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.dynamic{
    padding: 0 20rpx;
}
.dynamic .content{
    display: flex;
}
.timer text{
    width: 88rpx;
    height: 40rpx;
    border-radius: 4rpx;
    background: #f8f8f8;
    line-height: 40rpx;
    font-size: 22rpx;
    color: #313131;
    white-space: nowrap;
}
.content .info{
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    padding: 0 20rpx;
    width: 100%;
}
.info .user{
    display: flex;
    align-items: center;
}
.info .user text{
    margin-left: 10rpx;
}
.image-list{
    display: flex;
}
.info>text{
    padding: 15rpx 0;
}
.img-list image{
    width: 98rpx;
    height: 98rpx;
    margin-right: 10rpx;
}
.more{
    display: flex;
    justify-content: flex-end;
    align-items: center;
    padding-top: 20rpx;
}
.more image{
    width: 18rpx;
    height: 28rpx;
    margin-left: 10rpx;
}
.share{
    border: none;
    height: 100%;
    background: #fff;
    line-height: 90rpx;
    display: flex;
    align-items: center;
}
.share image{
    width: 29rpx;
    height: 33rpx;
    vertical-align: text-bottom;
}
button::after{
    border:none;
}