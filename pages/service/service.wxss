/* 滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.navigation {
  width: 680rpx;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 70rpx;
  font-size: 30rpx;
  white-space: nowrap;
  background-color: rgb(250, 250, 250);
  color: #757575;
}

.nav-options {
  margin: 0 28rpx;
  display: inline-block;
}

.nav-options.active {
  color: #FE533C;
  position: relative;
}

.nav-options.active:after {
  content: "";
  display: block;
  height: 4rpx;
  width: 60rpx;
  background: #FE533C;
  position: absolute;
  bottom: 0;
  border-radius: 4rpx;
}