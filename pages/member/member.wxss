/* pages/member/member.wxss */
.member{
  position: relative;
  color: #fff;
  font-family: 'Himalaya-G';
}
.member>image{
  width: 100%;
  height: 640rpx;
}
.mem-content{
  position: absolute;
  top: 0;
  /* height: 0; */
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 675rpx;
  justify-content: space-between;
}
.mem-tit{
  border-bottom: 4rpx solid #f7ab27;
  padding: 20rpx;
  font-size: 30rpx;
}
.mem-content image{
  width: 622rpx;
  height: 362rpx;
}
.mem-btn{
  background: #f7ab27;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  width: 400rpx;
  text-align: center;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.vip{
  /* position: fixed; */
  width: 100%;
  left: 0;
  top: 330rpx;
  height: 70rpx;
  background: #FFF5E5;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  /* padding: 0 30rpx; */
  color: #CDAB87;
  font-weight: 500;
}
.vip text{
  line-height: 70rpx;
  font-family: 'Himalaya-G'; 
  /* margin-left: 30rpx; */
  font-size: 24rpx;
}
.vip-font{
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.vip-font image{
  margin-right: 15rpx;
}
.vip-btn{
  color: #fff;
  background: #DFA261;
  box-sizing: border-box;
  font-weight: bold;
  padding: 0 30rpx;
  font-size: 28rpx;
}