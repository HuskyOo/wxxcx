/* pages/my-course/my-course.wxss */
/* 头部导航 */
.course-nav{
	display: flex;
	justify-content: space-around;
	align-items: center;
	padding: 40rpx 0;
}
.nav-item{
	display: flex;
	flex-direction: column;
	align-items: center;
}
.nav-item.active text{
	color: #10c2b8
}
.nav-item image{
	width: 80rpx;
	height: 80rpx;
}
.nav-item text{
	font-family: 'Jomolhari';
	color: #333;
	font-size: 30rpx;
	margin-top: 20rpx;
}

/* 没有购买的物品 */
.none{
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	padding: 100rpx 0;
}
.none image{
	width: 200rpx;
	height: 200rpx;
}
.none text{
	color: #d2d2d2;
}