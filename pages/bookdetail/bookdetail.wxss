/* pages/bookdetail/bookdetail.wxss */
@import '../../wxParse/wxParse.wxss';
page{
  font-family: 'Jomolhari';
}
.page-padding{
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.introduce{
  display: flex;
  flex-direction: column;
  height: 210rpx;
  justify-content: space-around;
  padding: 20rpx;
  box-sizing: border-box;
}
.introduce .price{
  font-size: 36rpx;
  color: #ff5052;
}
.introduce .title{
  font-size:32rpx;
  color:#222;
}
.introduce .sell{
  display: flex;
  justify-content: space-between;
  font-size:24rpx;
  color:#999
}
.attestation{
  background: #f8f8f8;
  color: #919191;
  font-size: 24rpx;
  display: flex;
  justify-content: start;
  height: 85rpx;
  justify-items: center;
  line-height: 85rpx;
  padding: 0 20rpx;
}
.attestation image{
  width: 28rpx;
  height: 28rpx;
  vertical-align: text-bottom;
  margin-right: 10rpx;
}
.attestation view{
  margin-right: 40rpx;
}
.detail .title{
  font-size: 30rpx;
  color: #313131;
}
.once{
  height: 98rpx;
}
.once .btn{
  height: 98rpx;
  font-size: 32rpx;
  width: 100%;
  line-height: 98rpx;
  position: fixed;
  bottom: 0;
  color:#fff;
  background: #ff623f;
  width: 100%;
  border-radius: 0;
  border:none;
  font-family: 'Himalaya-G';
}
.box-container{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, .8)
}
.box{
  position: absolute;
  z-index: 50;
  bottom: 0;
  width: 100%;
  background: #fff;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
}
.box .contai{
  box-sizing: border-box;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  /* align-items: center; */
}
.box .contai>image{
  width: 150rpx;
  height: 150rpx;
  flex-shrink: 0;
  margin-right: 15rpx;
}
.box .contai .info{
  width: 100%;
  display: flex;
  flex-direction: column;
  /* justify-content: space-around; */
}
.info .pric{
  color: #ff5052;
}
.info .title{
  font-weight: normal;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.sale-num{
  display: flex;
  border-top: 1rpx solid #999;
  box-sizing: border-box;
  padding: 50rpx 30rpx;
}
.sale-num>text{
  font-family: 'Jomolhari';

}
.sale-num>image{
  width: 70rpx;
  height: 60rpx;
}
.sale-num>input{
  box-sizing: border-box;
  width: 110rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 36rpx;
  color: #999;
  border: 1rpx solid #999;
  border-left: none;
  border-right: none;
}
.cancel{
  width: 50rpx;
  height: 100%;
  flex-shrink: 0;
}
.cancel image{
  width: 50rpx;
  height: 50rpx;
}
