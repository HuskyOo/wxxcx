page{
  background-color: #F9F9F9;
  font-family: 'Jomolhari'
}

.none{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
}
.none image{
  width: 200rpx;
  height: 200rpx;
}
.none text{
  color: #d2d2d2;
}
/* 头部导航选项 */
.buyNav{
  display: flex;
  flex-direction: row;
  justify-content:space-around;
  background-color: #FFFFFF;
  border-top: 2rpx solid #E5E5E5
}

.buyNav-list{
  width: 100rpx;
  text-align: center;
  color: #616161;
  font-size: 30rpx;
  height: 68rpx;
  line-height: 68rpx;
}

.selected{
  color: #FF623F;
  border-bottom: 4rpx solid #FF623F
}

/* 购买图书列表 */
.buybook-list{
  margin-top: 28rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  display: flex;
  padding-top: 20rpx;
  padding-left: 14rpx;
  flex-direction: row;
  background-color: #FFFFFF;
  border-radius: 10rpx;
  padding-bottom: 40rpx
}

.buybook-list-image image{
  width: 200rpx;
  height: 200rpx;
}

.buybook-list-text{
  margin-left: 24rpx
}

.buybook-list-title{
  font-size: 26rpx;
  color: #313131;
  font-weight: 600;
  width: 260rpx;
  display: block;
  white-space: pre-line;
  margin-top: 14rpx
}

.buybook-list-description{
  width: 120rpx;
  height: 34rpx;
  display: block;
  text-align: center;
  margin-top: 22rpx;
  border-radius: 16rpx;
  background-color: #FFEFEB;
  font-size: 20rpx;
  color: #FF623F;
}

.buybook-list-number{
  margin-left: 62rpx
}

.buybook-list-price{
  font-size: 28rpx;
  color: #616161;
  display: block
}

.buybook-list-numberone{
  display: block;
  font-size: 20rpx;
  color: #919191;
  margin-left: 108rpx
}

.buybook-list-time{
  display: block;
  font-size: 20rpx;
  color: #919191;
  margin-left: 60rpx;
  margin-top: 86rpx
}
.book-list{
  background: #fff;
  margin-left: 0;
  margin-top: 30rpx;
  padding: 20rpx 30rpx;
}
.book-information{
  border: none;
}