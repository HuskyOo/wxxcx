/* pages/home/home.wxss */
.search{
	display: flex;
	align-items: center;
	flex-wrap: nowrap;
	box-sizing: border-box;
	padding: 10rpx 30rpx;
	border-bottom: 1rpx solid #e5e5e5;
	border-top: 1rpx solid #e5e5e5;
}
.search image{
	width: 100rpx;
	height: 80rpx;
	flex-shrink: 0;
	margin-right: 10rpx;
}
.search input{
	background: #f5f5f5;
	height: 60rpx;
	border-radius: 40rpx;
	width: 100%;
	font-size: 24rpx;
	padding: 0 30rpx;
	line-height: 60rpx;
}
/* 导航栏 */
.navigation {
	font-family: '藏研黑体';
	box-sizing: border-box;
	overflow: hidden;
	font-size: 30rpx;
	background-color: rgb(250, 250, 250);
	color: #757575;
	display: flex;
	justify-content: space-around;
	align-items: center;
	height: 96rpx;
}
.nav-options {
	box-sizing: border-box;
	padding: 20rpx 40rpx;
}
.nav-options.active {
	color: #10c2b8;
	border-bottom: 1rpx solid #10c2b8;
	font-size: 34rpx;
}
.navigation button{
	margin:0;
	/* padding: 0; */
	box-sizing: border-box;
	display: inline-block;
	font-size: 30rpx;
	line-height: 0;
	background: none;
	color: #757575;
}
.navigation button::after{
	border: none;
	background: none
}

.wx-swiper-dot{
    width:5rpx;
    /* display: inline-flex; */
    height: 5rpx;
    /* margin-left: 20rpx; */
    /* justify-content:space-between; */
}


/* 九宫格 */
.grid{
	display: flex;
	flex-wrap: wrap;
	justify-content: space-between;
	/* margin: 40rpx 0; */
	/* position: relative; */
	margin-bottom: 20rpx;
	overflow: hidden;
}
.grid-item{
	display: flex;
	width: 20%;
	flex-direction: column;
	align-items: center;
	margin-top: 20rpx;
	/* margin: 20rpx 0; */
}
.grid-item>image{
	width: 72rpx;
	height: 72rpx;
	margin-bottom: 10rpx;
}
.grid-item>text{
	font-family: 'Jomolhari';
	font-size: 30rpx;
}



/* 加载更多按钮 */
.addMore{
	width: 100%;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}
.addMore text{
	font-size: 26rpx;
}
.addMore image{
	width: 20rpx;
	height: 20rpx;
}

/* 头部图片 */
.rescue-titleImg image{
	width: 100%;
	height: 220rpx;
	margin-top: 5rpx
}


