/* pages/home/home.wxss */
/* 导航栏 */
.navigation {
	font-family: '藏研黑体';
	box-sizing: border-box;
	overflow: hidden;
	font-size: 30rpx;
	background-color: rgb(250, 250, 250);
	color: #757575;
	display: flex;
	justify-content: space-around;
	align-items: center;
	height: 92rpx;
}
.nav-options {
	box-sizing: border-box;
	padding: 20rpx 40rpx;
}
.nav-options.active {
	color: #10c2b8;
	border-bottom: 1rpx solid #10c2b8;
}
.navigation button{
	margin:0;
	/* padding: 0; */
	box-sizing: border-box;
	display: inline-block;
	font-size: 30rpx;
	line-height: 0;
	background: none;
	color: #757575;
}
.navigation button::after{
	border: none;
	background: none
}


/* 九宫格 */
.grid{
	display: flex;
	flex-wrap: wrap;
	justify-content: space-between;
	/* margin: 40rpx 0; */
	/* position: relative; */
	overflow: hidden;
}
.grid-item{
	display: flex;
	width: 20%;
	flex-direction: column;
	align-items: center;
	margin-top: 20rpx;
}
.grid-item>image{
	width: 72rpx;
	height: 72rpx;
	margin-bottom: 10rpx;
}


/* 加载更多按钮 */
.addMore{
	width: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
}
.addMore text{
	font-size: 26rpx;
}
/* 头部图片 */
.rescue-titleImg image{
	width: 100%;
	height: 220rpx;
	margin-top: 5rpx
}


