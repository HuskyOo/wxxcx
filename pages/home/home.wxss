.control{
	position: fixed;
	bottom: 0;
	width: 100%;
	/* height: 100rpx; */
	box-sizing: border-box;
	padding: 30rpx 20rpx;
}
.control-content{
	width: 100%;
	height: 100rpx;
	background: rgba(0, 0, 0, 0.7);
	border-radius: 30rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
	flex-wrap: nowrap;
	box-sizing: border-box;
	padding: 10rpx;
}
.control-avatar{
	width: 80rpx;
	height: 80rpx;
	border-radius: 40rpx;
	flex-shrink: 0;
	margin-right: 10rpx;
}
.control-info{
	width: 100%;
	display: flex;
	flex-direction: column;
	overflow: hidden;
}
.control-title{
	color: #eee;
	font-weight: 500;
	font-size: 34rpx;
	white-space: nowrap;
	overflow: hidden;
}
.control-timer{
	color: #aaa;
	font-size: 30rpx;
}
.control-play{
	width: 80rpx;
	height: 80rpx;
	flex-shrink: 0;
	margin-left: 30rpx;
}
.control-next{
	width: 40rpx;
	height: 40rpx;
	flex-shrink: 0;
	margin: 0 35rpx;
}


.banner-contact{
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	opacity: 0;
}