/* 最新救助 */
.latest-aid{
	margin-top: 30rpx;
	margin-bottom: 40rpx
}

.latest-aid-content {
	width: 100%;
	box-sizing: border-box;
	overflow: hidden;
	white-space: nowrap;
}

.Latest-aid-list {
	margin-left: 30rpx;
	display: inline-block;
	/* background-color: red; */
	width: 300rpx;
	border-bottom: 1rpx solid rgb(240, 240, 240);
	box-shadow: 3rpx 3rpx 3rpx 5rpx rgb(240, 240, 240);
	padding-bottom: 20rpx
}

.latest-aid-title{
	font-family: 'Himalaya-G';
	padding-left: 40rpx;
	margin-bottom: 40rpx;
	font-weight: 600;
	font-size: 32rpx;
}

.latest-aid-title text{
	font-size: 32rpx;
}

.Latest-aid-list image{
	width: 300rpx;
	height: 140rpx
}

.latest-aid-description{
	line-height: 30rpx;
	padding: 16rpx 16rpx 0rpx 16rpx;
}

.latest-aid-description text{
	font-size: 24rpx;
	font-weight: 600;
	line-height: 50rpx;
	/* white-space:pre-line; */
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: normal;
}

.latest-aid-total{
	width: 280rpx;
	height: 6rpx;
	background-color: #F3F3F3;
	margin-top: 14rpx;
	margin-left: 12rpx;
}

.latest-aid-current{
	width: 50%;
	height: 6rpx;
	background-color: #F76241
}

.latest-aid-amount{
	font-size: 24rpx;
	color: #FF623F;
	margin-top: 15rpx;
	margin-left: 16rpx;
}

.current-rescue-title{
	display: flex;
	flex-direction: row
}

/* 当前救助 */
.current-rescue{
	padding-top: 36rpx
}

.current-rescue-title{
	padding-bottom: 28rpx;
	border-bottom: 4rpx solid #F6F6F6
}

.title-name{
	margin-left: 42rpx;
	font-size: 32rpx;
	/* color: red; */
	line-height: 42rpx;
	font-weight: 600;
	font-family: 'Himalaya-G';
}

.title-prompt{
	font-size: 20rpx;
	color: #919191;
	margin-left: 222rpx;
	line-height: 42rpx
}

.current-rescue-list{
	padding: 16rpx 40rpx 0rpx 40rpx
}

.current-rescue-list-title{
	display: flex;
	flex-direction: row;
}

.current-rescue-list-title image{
	width: 40rpx;
	height: 40rpx;
	border-radius: 10rpx
}

.current-rescue-list-title text{
	font-size: 20rpx;
	color: #616161;
	line-height: 40rpx
}

.current-rescue-list-name{
	margin-left: 12rpx
}

.current-rescue-list-frequency{
	margin-left: 430rpx
}

.current-rescue-list-content{
	display: flex;
	flex-direction: row;
	padding-top: 20rpx;
	padding-bottom: 28rpx;
	border-bottom: 4rpx solid #F6F6F6
}

.current-rescue-list-content image{
	width: 160rpx;
	height: 160rpx
}

.current-rescue-list-detailed{
	/* background-color: red; */
	padding-left: 28rpx;
	width: 480rpx;
	text-overflow: ellipsis;
	overflow: hidden;
	white-space: nowrap;
}

.current-rescue-list-description{
	font-size: 28rpx;
	color: #313131
}

.current-rescue-list-fundraising{
	display: flex;
	flex-direction: row;
	align-items:center;
	justify-content:center;
	background-color: #F8F8F8;
	font-size: 26rpx;
	color: #919191
}

.current-rescue-list-now{
	display: flex;
	flex-direction: column;
	padding: 18rpx 30rpx
}

.current-rescue-list-nowText{
	color: #919191;
}

.current-rescue-list-schedule{
	width: 120rpx;
	height: 4rpx;
	background-color: #D5D5D5
}

.current-rescue-list-scheduleNow{
	width: 30%;
	height: 4rpx;
	background-color: #FF623F
}

.current-rescue-list-amount{
	color: #FF623F
}