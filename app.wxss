.history{
  position: fixed;
  bottom: 105rpx;
  right: 50rpx
}

.history image{
  width: 74rpx;
  height: 74rpx;
}

/* 底部导航 */
.tabbar{
  display: flex;
  flex-direction: row;
  /* justify-content: space-around; */
  border-top: 2rpx solid #DFDFDF;
  height: 102rpx;
  align-items: center;
  position: fixed;
  bottom: 0rpx;
  background-color: #fff
}

.tabbar-list{
  display: flex;
  flex-direction: column;
  margin: 0rpx 100rpx
}

.tabbar-list image{
  width: 42rpx;
  height: 42rpx
}

.tabbar-list text{
  font-size: 24rpx;
  margin-top: 10rpx;
  color: #919191
}

.tabbar-active{
  color: #F76241
}

/* 高度填充 */
.highly-filled{
  height: 105rpx
}