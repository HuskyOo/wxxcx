.nav-content{
  display:flex;
  /* margin:0px 16px; */
  width:20%;
  font-size:24rpx;
  text-align:center;
  flex-direction:column;
  align-items:center;
}

.nav-content image{
  width: 72rpx;
  height: 72rpx;
  margin-top: 41rpx;
  /* background-color: black */
}

.nav-content text{
  /* background-color: brown */
  /* word-wrap: wrap none;*/
  /* display: block; */
  /* font-family:  */
  white-space: nowrap;
  font-size:30rpx;
  margin-top: 20rpx;
}

.title{
  font-size: 32rpx;
  font-weight: 700
}

/* 经典课程 */
.course{
  margin-top: 46rpx;
  margin-bottom: 48rpx;
}

.title-one{
  display: inline-block;
  margin-left: 0;
  font-size: 32rpx
}

.title-two{
  display: inline-block;
  margin-left: 0;
  color: #919191;
}

.title-two image{
  width: 14rpx;
  height: 24rpx;
}

.course-content{
  margin-top: 54rpx;
  margin-left: 10rpx;
  display: flex;
  flex-wrap: wrap;
}

.course-list{
  width: 226rpx;
  display: inline-block;
  margin: 0rpx 9rpx
}

.course-list image{
  /* width: 226rpx;
  height: 218rpx */
  width: 226rpx;
  height: 332rpx;
}

.course-text{
  margin-left: 14rpx
}

.course-name{
  display: inline-block;
  font-size: 26rpx;
  /* background-color: turquoise */
}

.course-introduction{
  display: inline-block;
  font-size: 22rpx;
  color: #919191;
  /* background-color: turquoise */
}

/* 书本推荐 */
.book-recommendation{
  margin-top: 52rpx;
  padding: 0 30rpx;
}
.book-recommendation .title{
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* flex-wrap: nowrap; */
}
.book-content{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
